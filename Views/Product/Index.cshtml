@model IEnumerable<MyProject.Web.Models.Dto.InfoProductDto>

<div class="container">
    <div>
        <h1>Product list</h1>
    </div>
    <div class="text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>B3CD</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.B3Name</td>
                    <td>
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@item.M01CId" As class="btn btn-primary">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.M01CId" class="btn btn-danger">Delete</a>
                    </td>
                </tr> 
            }
        </tbody>
    </table>
</div>